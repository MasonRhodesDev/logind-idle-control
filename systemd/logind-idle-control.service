[Unit]
Description=Logind Idle Control Daemon
Documentation=https://github.com/yourusername/logind-idle-control
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/logind-idle-daemon
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical-session.target
